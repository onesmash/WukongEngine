# GNU Make workspace makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug_osx
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_osx)
  client_config = debug_osx
  server_config = debug_osx
endif
ifeq ($(config),release_osx)
  client_config = release_osx
  server_config = release_osx
endif

PROJECTS := client server

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

client:
ifneq (,$(client_config))
	@echo "==== Building client ($(client_config)) ===="
	@${MAKE} --no-print-directory -C . -f client.make config=$(client_config)
endif

server:
ifneq (,$(server_config))
	@echo "==== Building server ($(server_config)) ===="
	@${MAKE} --no-print-directory -C . -f server.make config=$(server_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f client.make clean
	@${MAKE} --no-print-directory -C . -f server.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_osx"
	@echo "  release_osx"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   client"
	@echo "   server"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"